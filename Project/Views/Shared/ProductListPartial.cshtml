<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var p in Model.SpaceObjects)
    {
        <div class="col text-center">
            <div class="card h-100 border-dark">
                <img src="@p.ImgId" class="card-img-top" , alt="..." />
                <div class="card-body">
                    <h5 class="card-title">@p.Name</h5>
                    <p class="card-text">@p.Description</p>
                    <div class="card-body"><a class="btn btn-outline-dark px-5" asp-action="Show" asp-route-id="@p.Id">Look</a></div>
                </div>
            </div>
        </div>
    }
</div>

