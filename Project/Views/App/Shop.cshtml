@model IndexViewModel

@addTagHelper *, FilterSortPagingApp

<div style="width: 100%;overflow:hidden;">
    <div style="float:left; width: 15%">
        @await Html.PartialAsync("FiltrationPartial")
    </div>

    <div style="float:right; width: 85%">
        @await Html.PartialAsync("ProductListPartial")
        <br>

        <page-link page-model="Model.PageViewModel" page-action="Index"
                   page-url-name="@(Model.FilterViewModel.SelectedName)"
                   page-url-category="@(Model.FilterViewModel.CurrentCategory)"
                   page-url-sortorder="@(Model.SortViewModel.Current)"></page-link>

        @await Html.PartialAsync("PaginationPartial")
    </div>
</div>


